{
    "input_csv": "data/processed/ais/ais_data_fehmarn_radius.csv",
    "timestamp_column": "# Timestamp",
    "dayfirst": true,
    "drop_invalid_ts": true,
    "lat_column": "Latitude",
    "lon_column": "Longitude",
    "distance_column": "dist_m",
    "ais_filters": {
      "Type of mobile": ["Class A", "Class B"],
      "Navigational status": "Under way using engine",
      "Type of position fixing device": "GPS",
      "Ship type": "Cargo"
    },
    "antenna": {
      "latitude": 54.578614,
      "longitude": 11.289016
    },
    "bearing_column": "bearing",
    "output": {
        "cleaned_csv":       "src/bearing/processed_data/ais_cleaned.csv",
        "interpolated_csv":  "src/bearing/processed_data/ais_interpolated.csv",
        "with_bearing_csv":  "src/bearing/processed_data/ais_with_bearing.csv",
        "with_rate_csv":     "src/bearing/processed_data/ais_with_bearing_rate.csv",
        "with_distance_csv": "src/bearing/processed_data/ais_with_distance.csv",
        "sector_hist_csv": "src/bearing/processed_data/sector_histogram.csv",
        "sector_hist_png": "src/bearing/processed_data/sector_histogram.png"
      },

    "interpolation": {
        "interval_seconds": 20,     
        "max_gap_minutes": 60        
      }
  }